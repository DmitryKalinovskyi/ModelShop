@model Client

<link href="~/css/profile-view.css"/>

<div class="profile-header">
    <img src="~/img/profile-background.jpg">
    <div class="profile-header-body h-100 container d-flex align-items-center ">
        <img src="~/img/avatar/a1.avif" alt="">
        <div class="ps-3">
            <div class="fs-4 text-light">
                @Model.Firstname
                @Model.Lastname
            </div>
            <div class="d-flex align-items-center">
                <!-- if not your account -->
                <!-- not followed -->
                <button class="btn btn-primary">Follow</button>

                <!-- followed -->
                <button class="btn btn-primary">Unfollow</button>

                <!-- your account -->
                <button class="btn btn-primary">Edit profile</button>

                <div class="ps-3 text-light d-flex align-items-center">
                    Followers 23
                </div>
                <div class="ps-3 text-light">
                    Following 10
                </div>
            </div>
        </div>
    </div>
</div>
<section class="pt-4">
    <div class="container">
        <div class="row">
            <div class="col-9">
                <div>
                    Popular 3d models
                </div>
                <div class="row row-gap-4">
                    @foreach(var ownedModel in Model.OwnedModels3D)
                    {
                        <div class="col-12 col-md-6 col-xl-4">
                            <div class="card model">
                                <a asp-controller="Model3D" asp-action="Details" asp-route-id="@ownedModel.Model3DID"
                                class="text-decoration-none">
                                    <img src="@ownedModel.ImageSource" class="card-img-top" alt="...">
                                </a>
                                <div class="card-footer">
                                    <div class="card-footer-left">
                                        @*<a class="card-profile" href="profile-view.html">@@Deeperxd</a>*@
                                    </div>
                                    <div class="card-footer-right">
                                        <div><i class="bi bi-eye"> </i>count</div>
                                        <div><i class="bi bi-chat"> </i>count</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="col-3">
                <div class="row row-gap-4">
                    <div>
                        <div class="card">
                            <div class="card-header">
                                About
                            </div>
                            <div class="card-body">

                                @Model.Description
                                
                            </div>
                        </div>
                    </div>

                    
                    <div>
                        <div class="card">
                            <div class="card-header">
                                Stats
                            </div>
                            <div class="card-body">
                                <div>
                                    <div><i class="bi bi-eye"> </i>Views</div>
                                </div>
                                <div>
                                    <div><i class="bi bi-chat"> </i>Comments</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    

                    <!-- <div>
                        <div class="card">
                            <div class="card-header">
                                Skills
                            </div>
                            <div class="card-body">
                                <div>

                                </div>
                            </div>
                        </div>
                    </div> -->
                </div>
            </div>
        </div>
    </div>

</section>